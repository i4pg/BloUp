<div class="p-2 box media">

<%= link_to user_url(friend_request.requestor_id), class: "media-left" do %>
  <figure class="image is-48x48">
    <img class="is-rounded" src="<%= Faker::Avatar.image %>">
  </figure>
<% end %>

<%= link_to user_url(friend_request.requestor_id), class: "media-content" do %>
  <p class="title is-6 is-family-monospace" style="margin-top: 1rem">@<%= User.find(friend_request.requestor_id).username %></p>
<% end %>

<div class="media-right is-mobile level pt-3">
  <%= button_to friend_request,
    mathod: :put,
    title: "Accept request",
    class: "level-item is-success icon button is-rounded",
    params: { friend_request:
              { requestor_id: friend_request.requestor_id,
              receiver_id: friend_request.receiver_id,
              status: 'accepted' }} do %>
    <i class="fa-solid fa-circle-check"></i>
  <% end %>

  <%= button_to friend_request, method: :delete,
                                class: "is-danger icon button is-rounded level-item",
                                title: "Ignore request" do %>
    <i class="fa-solid fa-circle-xmark"></i>
  <% end %>
</div>

</div>
