<%= turbo_frame_tag 'articles' do %>
<%= render 'users/profile_tabs' %>
  <div class="media">
    
    <div class="media-left">
      <figure class="image is-64x64">
        <%= image_tag @user.displayed_avatar, class: "is-rounded"  %>
      </figure>
    </div>

    <div class="media-content">
      <p class="title is-family-monospace">@<%= @user.username %></p>
      <p class="subtitle is-6"><%= @user.created_at %></p>
    <% @articles.each do |article| %>
      <%= turbo_frame_tag 'partial_article', src:article, class: "card" %>
      <br>
    <% end %>
    </div>


  </div> 
<% end %>
