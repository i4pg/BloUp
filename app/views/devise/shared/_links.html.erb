<ul class="block">
<%- if controller_name != 'sessions' %>
  <li>
    <%= link_to sanitize("&larr; Login"), new_session_path(resource_name), class: " is-link " %>
  </li>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <li>
    <%= link_to sanitize("&larr; Sign up"), new_registration_path(resource_name), class: " is-primary" %>
  </li>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <li>
    <%= link_to sanitize("&larr; Forgot your password?"), new_password_path(resource_name), class: " is-warning" %>
  </li>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <li>
    <%= link_to sanitize("&larr; Didn't receive confirmation instructions?"), new_confirmation_path(resource_name), class: " is-link" %>
  </li>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <li>
    <%= link_to sanitize("&larr; Didn't receive unlock instructions?"), new_unlock_path(resource_name), class: " is-link" %>
  </li>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% next if provider.to_s == 'facebook' %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post, class: " is-link"%>
  <% end %>
<% end %>
</ul>
