<%= form_with(model: article, class: "column is-three-fifths is-offset-one-fifth") do |form| %>
  <% if article.errors.any? %>
    <div class="notification is-warning">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <article class="media">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/128x128.png">
      </p>
    </figure>
    <div class="media-content">
      <div class="field">
        <p class="control">
          <%= form.text_area :body, class: "textarea", placeholder: "Write a new Aritcle" %>
        </p>
      </div>
      <nav class="level">
        <div class="level-left">
          <div class="level-item buttons">
            <%= form.submit class: "button is-success" %>
            <%= link_to "Cancel", articles_path, class: "button is-info" %>
          </div>
        </div>
      </nav>
    </div>
  </article> <br>
<% end %>
