<div class="container">
  <div class="section">
    <div class="column box is-three-fifths is-offset-one-fifth">
      <%= turbo_frame_tag "articles" do %>
        <p style="color: green">
          <%= notice %>
        </p>
        
        <%= render @article %>
        
        <div class="buttons">
          <%= link_to "Edit", edit_article_path(@article),
                              form: { data: { turbo_frame: "edit_article" } },
                              class: "button is-primary" %>
          <%= link_to "Back", articles_path, class: "button is-link" %>
        </div>
        
        <div class="buttons">
          <%= button_to "Remove",
            @article,
            method: :delete,
            form: { data: { turbo_frame: "_top" }},
            class: "button is-danger" %>
        </div>
    <% end %>
  </div>
</div>
