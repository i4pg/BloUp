<div class="container">
  <div class="section">
    <p style="color: green"><%= notice %></p>
    
    <%= render @article %>
    
    <div class="buttons">
      <%= link_to "Edit", edit_article_path(@article), class: "button is-primary" %>
      <%= link_to "Back", articles_path, class: "button is-link" %>
    </div>
    
    <div class="buttons">
      <%= button_to "Remove", @article, method: :delete, class: "button is-danger" %>
    </div>
  </div>
  
</div>
